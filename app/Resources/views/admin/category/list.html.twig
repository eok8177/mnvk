{% extends 'admin/base.html.twig' %}

{% block body %}

<h1 class="page-header">Categories</h1>

{% if categories %}
<table class="table table-hover">
	<thead>
		<tr>
			<th>Action</th>


			<th class="wide">Title</th>
			<th>Published</th>
		</tr>
	</thead>
	<tbody>

		{% for key, item in categories %}
		<tr>
			<td>
				<div class="btn-group btn-group-sm">
					<a href="{{ path('admin_category_edit', {'id' : item.id}) }}" class="btn"><span class="fa fa-pencil" aria-hidden="true"></span></a>
					<a href="{{ path('admin_category_delete', {'id' : item.id}) }}" class="btn delete"><span class="fa fa-trash" aria-hidden="true"></span></a>
				</div>
			</td>

			<td>{{ item.indentedTitle }}</td>
			<td>{{ item.enabled ? 'Yes' : '-' }}</td>
		</tr>
		{% endfor %}


	</tbody>
</table>
{% else %}
<p>No Categories.
<p><a href="{{path('admin_category_edit')}}"><i class="fa fa-plus"></i> New Category</a>
{% endif %}

{% endblock %}

{% block stylesheets %}
	<style>
		.wide {width: 70%;}
	</style>
{% endblock %}