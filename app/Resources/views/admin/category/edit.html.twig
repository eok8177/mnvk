{% extends 'admin/base.html.twig' %}

{% block body %}

<h1 class="page-header">{% if current.action == 'edit' %}Edit{% else %}New{% endif %} Category</h1>

{{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}

	<div class="form-group">
		{{ form_label(form.order) }}
		<div class="col-md-10">
			<div class="row">
				<div class="col-md-4">
					{{ form_widget(form.order) }}
				</div>
				<div class="col-md-8">
					{{ form_widget(form.parent) }}
				</div>
			</div>
		</div>
	</div>

	{{ form_row(form.title) }}
	{{ form_row(form.text) }}
	{{ form_row(form.enabled) }}

	{{ form_row(form.save) }}
	{{ form_row(form.saveAndExit) }}

{{ form_end(form) }}
{% endblock %}