{% extends 'admin/base.html.twig' %}

{% block body %}

<h1 class="page-header">Pages</h1>

{% if pages %}
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Action</th>


                <th>Title</th>
                <th>Slug</th>
				<th>Image</th>
				<th>Published</th>
            </tr>
        </thead>
        <tbody>

            {% for key, item in pages %}
                <tr>
                    <td>
                        <div class="btn-group btn-group-sm">
                            <a href="{{ path('admin_page_edit', {'id' : item.id}) }}" class="btn"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <a href="{{ path('admin_page_delete', {'id' : item.id}) }}" class="btn delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                        </div>
                    </td>

                    <td>{{ item.title }}</td>
                    <td>{{ item.slug }}</td>
                    <td>
                    {% if item.fimage is not empty %}
                        <img src="{{ item.fimage | imagine_filter("thumb_50x50") }}">
                    {% endif %}
                    </td>
					<td>{{ item.enabled ? 'Yes' : '-' }}</td>
                </tr>
            {% endfor %}


        </tbody>
    </table>
{% else %}
    No Pages.
{% endif %}

{% endblock %}