{% extends 'admin/base.html.twig' %}

{% block body %}
	<div class="container-fluid">

	<h1 class="page-header">User</h1>

		{{ form_start(form, {'attr': {'class': 'form-horizontal', 'autocomplete' : 'off'} }) }}

		<input type="text" name="" class="autofeel-hack">
		<input type="password" name="" class="autofeel-hack">

		<div class="col-md-8">

			{{ form_row(form.role) }}
			{{ form_row(form.username) }}
			{{ form_row(form.email) }}
			{{ form_row(form.firstName) }}
			{{ form_row(form.lastName) }}

			{{ form_row(form.phone) }}
			{{ form_row(form.skype) }}

			<hr>

			{{ form_row(form.plainPassword) }}
			{{ form_row(form.isActive) }}

		</div>
		<div class="col-md-4">
			{% if photo is not empty %}
				<div class="thumbnail">
					<img src="{{ photo }}">
					<a href="{{ path('admin_user_delete_avatar', {'id': user.id}) }}" class="btn delete"><span class="fa fa-trash" aria-hidden="true"></span></a>
				</div>
			{% else %}
				<label>Photo</label>
			{% endif %}
			{{ form_widget(form.photo) }}
		</div>

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<input type="submit" value="Save" class="btn btn-default" />

				</div>
			</div>

		{{ form_end(form) }}


	</div>
{% endblock %}

{% block stylesheets %}
	<style type="text/css">
		.thumbnail {
			float: left;
			position: relative;
			overflow: hidden;
			min-height: 160px;
		}
		.autofeel-hack {
			position: absolute;
			top: -999px;
		}
	</style>
{% endblock %}